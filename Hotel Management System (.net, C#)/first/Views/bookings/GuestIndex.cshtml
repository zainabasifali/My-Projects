@model IEnumerable<first.Models.booking>

@{
    var currentTime = DateTime.Now;
    ViewBag.Title = "GuestIndex";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<style>
    .btnColor {
        background-color: #004d40 !important;
        color: white;
    }

        .btnColor:hover {
            color: white;
            background-color: #00695c !important;
            transform: scale(1.05);
        }
</style>

<div class="container mt-4">
    <h2 class="page-title">My Bookings</h2>

    <div class="mb-3">
        @Html.ActionLink("Create New Booking", "Create", "Bookings", null, new { @class = "btn btnColor" })
        <p class="mt-2 text-muted">Here you can view your past and upcoming bookings and easily create a new one.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm rounded">
            <div class="card-header bg-light text-dark py-3">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-history me-2"></i>Previous Bookings</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.user.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.check_in)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.check_out)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.room.number)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.user.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.check_in)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.check_out)
                                    </td>
                                    <td>
                                        @if (item.status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.status)</span>

                                        }
                                        else
                                        {
                                        <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.status)</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.room.number)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })
                                        @if (item.status != "Cancelled" && item.check_in > currentTime.AddHours(1))
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })
                                            @Html.ActionLink("Cancel", "DeleteConfirmed", new { id = item.id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to cancel this booking?');" })
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-warning me-1 disabled" title="Cannot edit booking within 1 hour of check-in.">Edit</button>
                                            <button class="btn btn-sm btn-danger disabled" title="Cannot cancel booking within 1 hour of check-in.">Cancel</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You currently have no bookings. Click the button above to create a new one.
        </div>
    }
</div>
