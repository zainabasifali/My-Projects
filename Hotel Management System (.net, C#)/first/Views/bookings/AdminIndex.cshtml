@model IEnumerable<first.Models.booking>

@{
    ViewBag.Title = "Bookings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btnColor {
        background-color: #004d40 !important;
        color: white;
    }

        .btnColor:hover {
            color: white;
            background-color: #00695c !important;
            transform: scale(1.05);
        }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Bookings</h2>
        <p class="mb-0">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btnColor" })
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.check_in)</th>
                        <th>@Html.DisplayNameFor(model => model.check_out)</th>
                        <th>@Html.DisplayNameFor(model => model.status)</th>
                        <th>@Html.DisplayNameFor(model => model.user.name)</th>
                        <th>@Html.DisplayNameFor(model => model.room.number)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.check_in)</td>
                            <td>@Html.DisplayFor(modelItem => item.check_out)</td>
                            <td>@Html.DisplayFor(modelItem => item.status)</td>
                            <td>@Html.DisplayFor(modelItem => item.user.name)</td>
                            <td>@Html.DisplayFor(modelItem => item.room.number)</td>
                            <td>
                                @if (item.status != "Cancelled")
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })
                                    @Html.ActionLink("Cancel", "DeleteConfirmed", new { id = item.id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to cancel this booking?');" })
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-primary me-1 disabled" title="Cannot edit booking within 1 hour of check-in.">Edit</button>
                                    <button class="btn btn-sm btn-danger disabled" title="Cannot cancel booking within 1 hour of check-in.">Cancel</button>
                                }
                                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })

                                @if (item.status == "Pending")
                                {
                                    @Html.ActionLink("Confirm", "ConfirmBooking", new { id = item.id }, new { @class = "btn btn-sm btnColor" })
                                }
                                else if (item.status != "Cancelled")
                                {
                                    @Html.ActionLink("Generate Bill", "Create", "bills", new { id = item.id }, new { @class = "btn btn-sm btnColor" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">No bookings found.</p>
    }
</div>
