@model first.Models.booking

@{
    string userRole = null;
    string guestName = null;

    if (Session["UserRole"] != null && Session["username"] != null)
    {
        userRole = Session["UserRole"].ToString();
        guestName = Session["Username"].ToString();
    }

    ViewBag.Title = "Details";
    if (userRole != null && userRole == "Admin")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_GuestLayout.cshtml";
    }
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Booking Details</h2>
        <div>
            @if (userRole == "Admin")
            {
                @Html.ActionLink("Back to List", "AdminIndex", null, new { @class = "btn btn-secondary rounded" })
            }
            else
            {
                @Html.ActionLink("Back to List", "GuestIndex", null, new { @class = "btn btn-secondary rounded" })
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Booking Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.check_in)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.check_in)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.check_out)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.check_out)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.status)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.user.name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.user.name)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.room.number)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.room.number)
                </dd>
            </dl>
        </div>
    </div>
</div>
