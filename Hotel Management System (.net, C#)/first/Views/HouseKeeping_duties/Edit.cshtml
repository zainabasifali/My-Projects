@model first.Models.HouseKeeping_duties

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Edit Duty</h2>
        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary rounded" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)

        <hr class="mb-4" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3 row">
            @Html.LabelFor(model => model.room_id, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
            <div class="col-md-10">
                @Html.DropDownList("room_id", null, htmlAttributes: new { @class = "form-select rounded" })
                @Html.ValidationMessageFor(model => model.room_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.assigned_to, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
            <div class="col-md-10">
                @Html.DropDownList("assigned_to", null, htmlAttributes: new { @class = "form-select rounded" })
                @Html.ValidationMessageFor(model => model.assigned_to, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.status, new { @class = "form-control rounded", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="mb-3 row">
            @Html.LabelFor(model => model.issue_reported, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.issue_reported, new { @class = "form-control rounded", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.issue_reported, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
            <div class="col-md-10">
                <input type="datetime-local"
                       class="form-control rounded"
                       name="date"
                       value="@(Model.date.ToString("yyyy-MM-ddTHH:mm"))" />
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary rounded" />
            </div>
        </div>
    }
</div>
