@model first.Models.HouseKeeping_duties

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <h4 class="text-center">Assign Duty to Housekeeping staff</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3 row">
        @Html.LabelFor(model => model.room_id, "room_number", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("room_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.room_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.assigned_to, "assigned_to", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("assigned_to", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.assigned_to, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.status, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3" style="display: none;">
        @Html.LabelFor(model => model.issue_reported, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.issue_reported, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.issue_reported, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "col-md-2 col-form-label fw-semibold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control rounded", type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Assign Duty" class="btn btnColor" />
        </div>
    </div>
</div>
}


