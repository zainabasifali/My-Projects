@model IEnumerable<first.Models.bill>

@{
    ViewBag.Title = "Bills";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btnColor {
        background-color: #004d40 !important;
        color: white;
    }

        .btnColor:hover {
            color: white;
            background-color: #00695c !important;
            transform: scale(1.05);
        }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Bills</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.room_charges)</th>
                        <th>@Html.DisplayNameFor(model => model.other_charges)</th>
                        <th>@Html.DisplayNameFor(model => model.total_amount)</th>
                        <th>@Html.DisplayNameFor(model => model.generated_at)</th>
                        <th>@Html.DisplayNameFor(model => model.booking.status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.room_charges)</td>
                            <td>@Html.DisplayFor(modelItem => item.other_charges)</td>
                            <td>@Html.DisplayFor(modelItem => item.total_amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.generated_at)</td>
                            <td>@Html.DisplayFor(modelItem => item.booking.status)</td>
                            <td>
                                @if (item.booking.status != "Cancelled")
                                {

                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })
                                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-danger" })
                                }
                                else
                                {
                                    @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-primary me-1" })

                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">No bills found.</p>
    }
</div>
