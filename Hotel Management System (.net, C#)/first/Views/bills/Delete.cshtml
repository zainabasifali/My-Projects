@model first.Models.bill

@{
    ViewBag.Title = "Delete Bill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Delete Bill</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirm Delete</h5>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this bill?</p>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.room_charges)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.room_charges)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.other_charges)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.other_charges)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.total_amount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.total_amount)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.generated_at)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.generated_at)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.booking.status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.booking.status)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)

                <div class="mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger rounded" />
                    @Html.ActionLink("Cancel", "AdminIndex", null, new { @class = "btn btn-secondary rounded ms-2" })
                </div>
            }
        </div>
    </div>
</div>
