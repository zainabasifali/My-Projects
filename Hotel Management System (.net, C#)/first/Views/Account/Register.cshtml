@model first.Models.user

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body, html {
            font-family: 'Segoe UI', sans-serif;
            height:100%
        }

        .split-left {
            background-color: #003d33;
        }

        .split-right {
            background-color: #f5f5f5;
        }

        .card-header-green {
            background-color: #004d40;
            color: white;
            border-radius: 0.75rem 0.75rem 0 0;
        }

        .btn-green {
            background-color: #004d40;
            border-color: #004d40;
            color: white;
        }

            .btn-green:hover {
                background-color: #00695c;
                border-color: #00695c;
            }


    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-md-6 d-none d-md-flex split-left text-white align-items-center justify-content-center">
                <img src="../Images/main.png" alt="Register Image" class="img-fluid" style="height:60%; width:100%;" />
            </div>

            <div class="col-md-6 split-right d-flex justify-content-center align-items-center">
                <div class="card border-0 rounded shadow-sm w-100 mx-3" style="max-width: 500px;">
                    <div class="card-header card-header-green border-bottom-0">
                        <h4 class="mb-0">Create an account (Guest)</h4>
                    </div>
                    <div class="card-body p-4">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-success">Full Name</label>
                                @Html.TextBoxFor(model => model.name, new { @class = "form-control rounded" })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-success">Email Address</label>
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control rounded", type = "email" })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-success">Password</label>
                                @Html.PasswordFor(model => model.password, new { @class = "form-control rounded" })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Register" class="btn btn-green btn-lg rounded" />
                            </div>
                            <div class="text-center mt-3">
                                <a href="/Account/Login" class="text-success text-decoration-none">Already have an account? Login</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
