@model List<first.Models.attendance>

@{
    ViewBag.Title = "Attendance by Date";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Attendance for @ViewBag.SelectedDate.ToString("yyyy-MM-dd")</h2>

    <form method="get" action="@Url.Action("AttendanceByDate", "Attendances")" class="form-inline mb-3">
        <div class="d-flex align-items-center justify-content-center mb-3 gap-3">
            <div class="d-flex align-items-center gap-2">
                <label for="date">Select Date:</label>
                <input type="date" id="date" name="date" value="@ViewBag.SelectedDate.ToString("yyyy-MM-dd")" class="form-control" style="width: 180px;" required />
            </div>
            <div>
                <button type="submit" class="btn btn-primary mr-3">View</button>
                <a href="@Url.Action("Index", "attendances")" class="btn btn-secondary">Back to Main Attendance Log</a>
            </div>
        </div>

    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Staff Name</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Marked By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.user1.name ?? "<span class='text-muted'>N/A</span>")</td>
                            <td>@item.status</td>
                            <td>@item.date.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (item.user != null)
                                {
                                    @item.user.name
                                }
                                else
                                {
                                    <span class="text-danger">Not marked yet</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">No attendance records found for this date.</p>
    }
</div>
