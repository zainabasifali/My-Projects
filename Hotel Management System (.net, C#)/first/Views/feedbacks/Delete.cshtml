@model first.Models.feedback

@{
    ViewBag.Title = "Delete Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Delete Feedback</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirm Delete</h5>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this feedback?</p>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.message)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.message)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.rating)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.rating)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.created_at)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.created_at)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    Booking Status
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.booking.status)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)

                <div class="mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger rounded" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary rounded ms-2" })
                </div>
            }
        </div>
    </div>

    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the feedback: <strong>@Html.DisplayFor(model => model.message)</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded" data-bs-dismiss="modal">Cancel</button>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.id)
                        <input type="submit" value="Delete" class="btn btn-danger rounded" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
